<!DOCTYPE html>
<html>
  <head>
    <title>Cards</title>
  </head>
  <link rel="stylesheet" href="css/style1.css" />
  <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
  <body>
      
    <div class="wrapper">
      <div class="header">
        <div class="container">
          <div class="search_wrap search_wrap_3">
            <div class="search_box">
              <form action="/search" method="post">
                <input type="text" class="input" name="search" placeholder="search..." />
                <button type="submit"><div class="btn btn_common">
                    <i class="fas fa-search"></i>
                  </div></button>
              </form>
              <div class="logout">
                <a href="/logout"><button type="submit">Logout</button></a>
              </div>
              <div class="logout">
                <a href="/homepage"><button type="submit">Home</button></a>
              </div>
            </div>
          </div>
          <% if (data[0].Response=="False") { %>
            <p>There is no movie with name <%=search %> </p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="main">
      <!--cards -->

      <% data.forEach(data => { %>
        <% if (data.Response=="True") { %>
            <div class="card">
                <div class="image">
                  <img
                    src=<%=data.Poster  %> 
                  />
                </div>
                <div class="title">
                  <h1><%= data.Title %> </h1>
                </div>
                <div class="des">
                  <p>Directed by- <%=data.Director %> </p>
                  <p>Released date- <%= data.Released %> </p>
                  <p>IMDB rating - <%=data.imdbRating  %> </p>
                  <p>Duration - <%= data.Runtime %> </p>
                  <a href="/show/readmore/<%=data.Title %> "><button>Read More...</button></a>
                  <div class="dropdown specialbtn">
                    <button class="dropbtn">Add to playlist</button>
                    <div class="dropdown-content">
                      <a href="#">Public</a>
                      <% playlists.forEach(element => { %>
                        <a href="/playlist/<%=data.Title %>:<%=element%>"" ><%=element  %></a>
                      <% }) %>
                    </div>
                  </div>
                </div>
              </div>
          <% } %>
      <% }) %>
      <!--cards -->

      
    </div>
  </body>
</html>
